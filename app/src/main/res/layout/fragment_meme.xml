<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_meme_fragment"
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:contentDescription="@string/imageView_content_description_meme"
            android:src="@drawable/ic_baseline_photo_camera_24" />

        <Button
            android:id="@+id/button_meme_fragment_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_meme_fragment"
            android:layout_alignStart="@id/imageView_meme_fragment"
            android:layout_marginStart="15dp"
            android:text="@string/meme_fragment_like_bnt"
            app:icon="@drawable/ic_baseline_check_circle_24" />
    </RelativeLayout>

</FrameLayout>